    </section>
    <section class="contacto">
      <picture class="contacto-foto col-3">
        <img src="assets/img/iPhoneX@2x.png" class="imagen-lateral">
      </picture>  

      <div class="card" style="width: 30rem; height: 30rem">
        <div class="card-body">
          <h4 class="card-title text-center">Solicita una demo</h4>
              
              {% for message in app.flashes('success') %}
                 <div class="isa_success">
                  <i class="fa fa-check"></i>
                  <h2 class="msgDemo">{{message}}</h2>
                  </div>
               {% endfor %}
              {% for message in app.flashes('error') %}
              <div class="isa_error">
              <i class="fa fa-times-circle"></i>
            <h2 class="msgDemo">{{message}}</h2>
            </div>
          {% endfor %}
            </div>

            {# <div class="isa_info">
              <i class="fa fa-info-circle"></i>
              Replace this text with your own text.
            </div>
        
            <div class="isa_warning">
              <i class="fa fa-warning"></i>
              Replace this text with your own text.
            </div> #}
      

              <div class="card-body card-content" id="demo-box">
                {{form_start(userForm, {'action': path("new-demo"), 'attr': {'class': 'formulario noappearance', 'id': 'form-demo'}}) }}

                  <div class="form-group">
                    {{form_label(userForm.nombre)}}
                    {{form_widget(userForm.nombre, {'attr': {'class': 'form-control'}})}}
                  </div>
                  <div class="form-group mb-4">
                    {{form_label(userForm.email)}}
                    {{form_widget(userForm.email, {'attr': {'class': 'form-control'}})}}
                  </div>
                  <div class="form-group mb-4">
                   {{form_label(userForm.ciudad)}}
                    {{form_widget(userForm.ciudad, {'attr': {'class': 'form-control'}})}}
                  </div>
                  <div class="politicaPrivacidad">
                    {# {{form_widget(userForm.politica)}}
                    {{form_label(userForm.politica)}} #}
                    <a href="{{path("politica")}}"><input type="checkbox" name="politica" required>

                    política de privacidad</a>
                  </div>
                  <button class="btn login-btn btn-warning btn-block form-btn" type="submit">Enviar</button>
                {{form_end(userForm)}}

              </div>

    </section>

    <section class="opiniones-guardianes">
